programa {
  funcao inicio() {
    inteiro diames, mes
    cadeia notamensal

    escreva("Planejamento")

    escreva("\nEscolha um dia do mês: (Númerico) ")
    leia(diames)
    escreva("Escolha um mês: (Númerico) ")
    leia(mes)
    escreva("Faça sua anotação: ")
    leia(notamensal)
    escreva(diames, "/", mes, ": ", notamensal)
  }
}
